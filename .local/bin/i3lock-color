#!/usr/bin/env bash

readonly FONT="FiraCode Nerd Font Mono"

readonly ALPHA='dd'
readonly BLANK='#00000000'
readonly SELECTION='#44475a'

readonly ORANGE='#ffb86c'
readonly RED='#ff5555'
readonly MAGENTA='#ff79c6'
readonly BLUE='#6272a4'
readonly GREEN='#50fa7b'

# https://github.com/cruegge/pam-gnupg#setup-guide
gpg-connect-agent --no-autostart reloadagent /bye

i3lock \
	--color "$BLANK" \
	--insidever-color "$SELECTION$ALPHA" \
	--insidewrong-color "$SELECTION$ALPHA" \
	--inside-color "$SELECTION$ALPHA" \
	--ringver-color "$GREEN$ALPHA" \
	--ringwrong-color "$RED$ALPHA" \
	--ringver-color "$GREEN$ALPHA" \
	--ringwrong-color "$RED$ALPHA" \
	--ring-color "$BLUE$ALPHA" \
	--keyhl-color "$MAGENTA$ALPHA" \
	--bshl-color "$ORANGE$ALPHA" \
	--separator-color "$SELECTION$ALPHA" \
	--verif-color "$GREEN" \
	--wrong-color "$RED" \
	--layout-color "$BLUE" \
	--date-color "$BLUE" \
	--time-color "$BLUE" \
	--line-uses-ring \
	--{time,date,layout,verif,wrong,greeter}-font="$FONT" \
	--{time,date,layout,verif,wrong,greeter}-size=24 \
	--time-str "%H:%M:%S" \
	--date-str "%Y-%m-%d" \
	--verif-text "Checking..." \
	--wrong-text "Incorrect!" \
	--noinput "No Input" \
	--lock-text "Locking..." \
	--lockfailed "Lock Failed" \
	--radius 120 \
	--ring-width 10 \
	--ignore-empty-password \
	--show-failed-attempts \
	--pass-{media,screen,volume}-keys \
	--clock \
	--indicator
