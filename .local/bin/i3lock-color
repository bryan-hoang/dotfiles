#!/usr/bin/env bash

FONT="FiraCode Nerd Font Mono"
BLANK='#00000000'
CLEAR='#ffffff22'
RED='#FF5555'
GREEN='#50FA7B'
BLUE='#8BE9FD'
YELLOW='#F1FA8C'
ORANGE='#FFB86C'
WHITE='#F8F8F2'

i3lock \
	--ignore-empty-password \
	--show-failed-attempts \
	--pass-{media,screen}-keys \
	--color "$BLANK" \
	--clock \
	--date-str "%Y-%m-%d" \
	--radius 100 \
	--{time,date,layout,verif,wrong,greeter}-font="$FONT" \
	--{time,date,layout,verif,wrong,greeter}-size=24 \
	--time-color="$GREEN" \
	--date-color="$BLUE" \
	--ring-color="$WHITE" \
	--keyhl-color="$ORANGE" \
	--verif-text="Verifying..." \
	--wrong-text="Wrong!" \
	--insidever-color="$CLEAR" \
	--ringver-color="$YELLOW" \
	--insidewrong-color="$CLEAR" \
	--ringwrong-color="$RED" \
	--inside-color="$BLANK" \
	--line-color="$BLANK" \
	--verif-color="$YELLOW" \
	--wrong-color="$RED"
