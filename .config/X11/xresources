#include "/home/bryan/src/github.com/dracula/xresources/Xresources"

! DPI scaling (filtered through `git config filter.xresources-dpi.clean`).

! Set consistent cursor theme.
Xcursor.theme: Dracula-cursors

! Some applications like URxvt will ignore fontconfig settings. You can work
! around this by using ~/.Xresources, but it is not as flexible as fontconfig.
! https://wiki.archlinux.org/title/Font_configuration#Applications_without_fontconfig_support
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
