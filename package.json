	"devDependencies": {
		"@commitlint/config-conventional": "19.0.3",
		"debug": "4.3.4",
		"husky": "9.0.11",
		"lint-staged": "15.2.2",
		"micromatch": "4.0.5",
		"prettier-plugin-packagejson": "2.4.12",
		"stylelint-config-prettier-scss": "1.0.0",
		"stylelint-config-standard-scss": "13.0.0"
	},
	"engines": {
		"node": ">=18",
		"pnpm": "=8"
	}
